<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textAra"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:text="@string/title_ara_word"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textEng"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAra"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:text="@string/title_eng_word"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/txtWord1"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_below="@+id/textEng"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"

            android:text="كَلِمَة"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#b2b2b2"

            android:clickable="true"
            android:onClick="onClick"/>


        <TextView
            android:id="@+id/txtWord2"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_below="@+id/txtWord1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"

            android:text="كَلِمَة"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#b2b2b2"

            android:clickable="true"
            android:onClick="onClick"/>


        <TextView
            android:id="@+id/txtWord3"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_below="@+id/txtWord2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"

            android:text="كَلِمَة"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#b2b2b2"

            android:clickable="true"
            android:onClick="onClick"/>


        <TextView
            android:id="@+id/txtWord4"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_below="@+id/txtWord3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"

            android:text="كَلِمَة"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#b2b2b2"

            android:clickable="true"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/photoWord"
            android:layout_below="@id/txtWord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtQuesWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photoWord"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"

            android:textSize="20dp"
            android:textColor="#000000"/>

    </RelativeLayout>

</ScrollView>